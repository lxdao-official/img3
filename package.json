{
  "name": "img3",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "build:pkg": "turbo run build --scope @lxdao/*",
    "start": "turbo run start",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "conventional-changelog-angular": "^7.0.0",
    "eslint": "^8.34.0",
    "eslint-config-custom": "workspace:^0.0.0",
    "lerna": "^7.4.2",
    "prettier": "^2.8.4",
    "turbo": "^1.8.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@8.6.12"
}
