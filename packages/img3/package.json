{
  "name": "@lxdao/img3",
  "version": "1.0.1",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:lib && npm run build:esm",
    "build:esm": "tsc -p ./tsconfig.build.json -m esnext --outDir esm",
    "build:lib": "tsc -p ./tsconfig.build.json -m commonjs --outDir lib",
    "clean": "rm -rf lib esm",
    "dev": "concurrently 'npm run dev:lib' 'npm rum dev:esm'",
    "dev:esm": "swc --watch src --out-dir esm --source-maps",
    "dev:lib": "swc --watch src --out-dir lib --source-maps -C module.type=commonjs",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "test": "jest"
  },
  "dependencies": {
    "@iconify/react": "^4.1.1",
    "react-is": "^18.2.0",
    "styled-components": "^6.1.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/styled-components": "^5.1.30",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-custom": "workspace:*",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:*",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
