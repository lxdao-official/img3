{
  "name": "@lxdao/uploader3",
  "version": "1.2.1",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:lib && npm run build:esm",
    "build:esm": "tsc -p ./tsconfig.build.json -m esnext --outDir esm",
    "build:lib": "tsc -p ./tsconfig.build.json -m commonjs --outDir lib",
    "clean": "rm -rf lib esm",
    "dev": "concurrently 'npm run dev:lib' 'npm rum dev:esm'",
    "dev:esm": "swc --watch src --out-dir esm --source-maps",
    "dev:lib": "swc --watch src --out-dir lib --source-maps -C module.type=commonjs",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "test": "jest"
  },
  "dependencies": {
    "@iconify/react": "^4.1.0",
    "cropperjs": "^1.5.13",
    "lodash.clonedeep": "^4.5.0",
    "nft.storage": "^7.0.0",
    "react-dropzone": "^14.2.3",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@lxdao/uploader3-connector": "workspace:*",
    "@swc/cli": "^0.1.61",
    "@swc/core": "^1.3.32",
    "@swc/jest": "^0.2.24",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^17.0.45",
    "@types/react": "^18.0.27",
    "@types/styled-components": "^5.1.26",
    "@types/testing-library__jest-dom": "^5.14.5",
    "concurrently": "^7.6.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "node-fetch": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "tsconfig": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
